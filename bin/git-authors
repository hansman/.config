#!/usr/bin/env bash

DATE=/usr/bin/date
if [ ! -x "$DATE" ]; then
  DATE=$(which date)
fi
if $DATE -v1d >/dev/null 2>&1; then
  DATEOPT="-v"
  DATEOPT_DEFAULT="-v1d -v1m -v1970y"
else
  DATEOPT="-d"
  DATEOPT_DEFAULT="-d 1970-01-01"
fi

SORT=/usr/bin/sort
if [ ! -x "$SORT" ]; then
  SORT=$(which sort)
fi

adjust=${@/#/$DATEOPT}
after=`$DATE ${adjust:=$DATEOPT_DEFAULT} '+%b %d %Y'`
git log --format='%h %ae' --no-merges --numstat -C \
        --after="$after" | \
    awk --posix "\$1~/[0-9a-f]{7}/ {
        split(\$2, asplit, \"@\")
        a=asplit[1]
        c[a]+=1
    } NF==3 {
        p[a]+=\$1
        m[a]+=\$2
    } END {
        for (a in c)
            printf(\"[33m%-20s[m %4d commits since $after, +%d, -%d\n\", a, c[a], p[a], m[a])
    }" | \
    $SORT -k3 -nr

