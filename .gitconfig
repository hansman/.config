[alias]
l = log --format='%C(yellow)%h%Creset %s %C(black bold)(%cr)%Creset' -10
br = branch --list
st = status -sb
snap = !git stash save "snapshot: $(date)" && git stash apply 'stash@{0}'
tree = log --graph --pretty=oneline --abbrev-commit --decorate

[core]
editor = vim +1
pager = less -XFR
autocrlf = input
longpaths = false

[color]
diff = always
ui = always

[diff]
tool = difftool
pager = less -XFR
algorithm = patience

[difftool]
prompt = false

[difftool.difftool]
cmd = difftool $LOCAL $REMOTE

[push]
default = simple

